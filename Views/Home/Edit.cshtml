@model endsem_project.Models.Todo
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit Task</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TaskName" class="control-label" style="margin: top 1rem;"><span class="text-s1">Task</span></label>
                <input asp-for="TaskName" class="form-control" value='@ViewBag.previousData.TaskName' style="margin-top: 0.5rem;"/>
                @* <span asp-validation-for="TaskName" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="TaskTag" class="control-label" style="margin: top 1rem;"><span class="text-s1" >Task</span></label>
                <input asp-for="TaskTag" class="form-control" value="@ViewBag.previousData.TaskTag" style="margin-top: 0.5rem;"/>
                <span asp-validation-for="TaskTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label" style="margin: top 1rem;"><span class="text-s1" >Priority</span></label>
                <select asp-for="Priority" class="form-control" style="margin-top: 0.5rem;">
                    <option value="0">--Select Priority--</option>
                    <option value="Primary">Primary</option>
                    <option value="Secondary">Secondary</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 2rem;">
                <div class="btn-group">
                    <input type="submit" value="Save" class="btn btn-outline-primary" />
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

